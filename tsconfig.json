{
    "compilerOptions": {
      "lib": ["es5"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "target": "es5"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
  